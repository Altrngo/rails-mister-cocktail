
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,121,168,0.6) 0%, rgba(0,36,61,0.6) 50%)">
  <div class="banner-content">
    <h1>Buff's cocktails</h1>
    <p>Sweetest Bevarages on earth</p>
    <%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
          <div class="card-description">
            <h2><%= link_to "#{cocktail.name}", cocktail_path(cocktail), class: 'card-link' %></h2>
          </div>
      </div>
    <% end %>
  </div>
</div>